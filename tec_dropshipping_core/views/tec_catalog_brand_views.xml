<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="tec_catalog_brand_view_search" model="ir.ui.view">
        <field name="name">tec.catalog.brand.search</field>
        <field name="model">tec.catalog.brand</field>
        <field name="arch" type="xml">
            <search string="Buscar Marcas">
                <field name="name"/>
                <separator/>
                <filter string="Con Productos" name="filter_has_products" domain="[('product_count', '&gt;', 0)]"/>
            </search>
        </field>
    </record>

    <record id="tec_catalog_brand_view_tree" model="ir.ui.view">
        <field name="name">tec.catalog.brand.tree</field>
        <field name="model">tec.catalog.brand</field>
        <field name="arch" type="xml">
            <list>
                <header>
                    <button name="action_import_icecat_brands_from_local_file" type="object" string="Importar Icecat" class="btn-secondary"/>
                    <button name="action_import_air_brand_mapping_from_local_file" type="object" string="Importar Air" class="btn-secondary"/>
                </header>
                <field name="logo" widget="image" options="{'size': [40, 40]}" string=" "/>
                <field name="name" string="Marca"/>
                <field name="is_icecat_brand" string="Oficial"/>
                <field name="product_count" string="Productos"/>
                <field name="website_url" widget="url" string="Web"/>
            </list>
        </field>
    </record>

    <record id="tec_catalog_brand_view_form" model="ir.ui.view">
        <field name="name">tec.catalog.brand.form</field>
        <field name="model">tec.catalog.brand</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field name="logo" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1><field name="name" placeholder="Nombre de la Marca"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="website_url" widget="url"/>
                            <field name="is_icecat_brand"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Aliases" name="aliases">
                            <field name="alias_ids">
                                <list editable="bottom">
                                    <field name="name" string="Alias"/>
                                </list>
                            </field>
                        </page>
                        <page string="Productos" name="products">
                            <field name="product_template_ids" readonly="1">
                                <list>
                                    <field name="default_code" string="Ref"/>
                                    <field name="name" string="Producto"/>
                                    <field name="list_price" string="Precio"/>
                                </list>
                            </field>
                        </page>
                        <page string="Descripcion" name="description">
                            <field name="description"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="tec_catalog_brand_action" model="ir.actions.act_window">
        <field name="name">Marcas</field>
        <field name="res_model">tec.catalog.brand</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="tec_catalog_brand_view_search"/>
        <field name="domain">[]</field>
        <field name="context">{'search_default_filter_has_products': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No hay marcas cargadas.
            </p>
        </field>
    </record>

</odoo>

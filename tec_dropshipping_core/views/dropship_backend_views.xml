<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_dropship_location_tree_inline" model="ir.ui.view">
        <field name="name">dropship.location.list.inline</field>
        <field name="model">dropship.location</field>
        <field name="arch" type="xml">
            <list editable="bottom">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="partner_id"/>
                <field name="import_column"/>
            </list>
        </field>
    </record>

    <record id="view_dropship_tax_map_tree_inline" model="ir.ui.view">
        <field name="name">dropship.tax.map.list.inline</field>
        <field name="model">dropship.tax.map</field>
        <field name="arch" type="xml">
            <list editable="bottom" create="true" delete="true">
                <field name="csv_value"/>
                <field name="tax_id" string="Imp. Compra" options="{'no_create': True}"/>
                <field name="sale_tax_id" string="Imp. Venta" options="{'no_create': True}"/>
            </list>
        </field>
    </record>

    <record id="view_dropship_backend_form" model="ir.ui.view">
        <field name="name">dropship.backend.form</field>
        <field name="model">dropship.backend</field>
        <field name="arch" type="xml">
            <form string="Dropship Backend">
                <header>
                    <button name="sync_catalog" string="Sync Catalog" type="object" class="btn-primary"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_sync_logs" type="object" class="oe_stat_button" icon="fa-list">
                            <field name="sync_log_count" widget="statinfo" string="Sync Logs"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1><field name="name"/></h1>
                    </div>
                    <group>
                        <group name="provider_config">
                            <field name="provider_code"/>
                            <field name="url_endpoint" widget="url"/>
                            <field name="global_margin"/>
                        </group>
                        <group>
                            <field name="cron_id"/>
                            <field name="last_sync" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Locations">
                            <field name="location_ids" context="{'tree_view_ref': 'tec_dropshipping_core.view_dropship_location_tree_inline'}"/>
                        </page>
                        <page string="Tax Mapping">
                            <field name="tax_mapping_ids">
                                <list editable="bottom">
                                    <field name="csv_value"/>
                                    <field name="tax_id" string="Imp. Compra" options="{'no_create': True}"/>
                                    <field name="sale_tax_id" string="Imp. Venta" options="{'no_create': True}"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_dropship_backend_tree" model="ir.ui.view">
        <field name="name">dropship.backend.list</field>
        <field name="model">dropship.backend</field>
        <field name="arch" type="xml">
            <list string="Dropship Backends">
                <field name="name"/>
                <field name="provider_code"/>
                <field name="last_sync"/>
            </list>
        </field>
    </record>

    <record id="action_dropship_backend" model="ir.actions.act_window">
        <field name="name">Dropship Backends</field>
        <field name="res_model">dropship.backend</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="tec_dropshipping_log_view_list" model="ir.ui.view">
        <field name="name">tec.dropshipping.log.view.list</field>
        <field name="model">tec.dropshipping.log</field>
        <field name="arch" type="xml">
            <list decoration-danger="status == 'error'" decoration-warning="status == 'partial'" decoration-success="status == 'success'" create="false">
                <field name="sync_date"/>
                <field name="sync_type"/>
                <field name="products_created"/>
                <field name="products_updated"/>
                <field name="items_deleted"/>
                <field name="status" widget="badge" decoration-danger="status == 'error'" decoration-warning="status == 'partial'" decoration-success="status == 'success'"/>
                <field name="log_summary"/>
            </list>
        </field>
    </record>

    <record id="tec_dropshipping_log_view_form" model="ir.ui.view">
        <field name="name">tec.dropshipping.log.view.form</field>
        <field name="model">tec.dropshipping.log</field>
        <field name="arch" type="xml">
            <form string="Sync Log" create="false">
                <sheet>
                    <group>
                        <group>
                            <field name="backend_id"/>
                            <field name="sync_date"/>
                            <field name="sync_type"/>
                        </group>
                        <group>
                            <field name="status" widget="radio" options="{'horizontal': true}"/>
                            <field name="products_created"/>
                            <field name="products_updated"/>
                            <field name="items_deleted"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Log Summary">
                            <field name="log_summary" nolabel="1" placeholder="Summary of what happened..."/>
                        </page>
                        <page string="Error Details" invisible="not error_details">
                            <field name="error_details" nolabel="1" widget="ace" options="{'mode': 'python'}"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="tec_dropshipping_log_action" model="ir.actions.act_window">
        <field name="name">Sync Logs</field>
        <field name="res_model">tec.dropshipping.log</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>

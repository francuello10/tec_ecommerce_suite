<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="tec_category_mapping_tree_view" model="ir.ui.view">
        <field name="name">tec.catalog.category.mapping.tree</field>
        <field name="model">tec.catalog.category.mapping</field>
        <field name="arch" type="xml">
            <list editable="bottom">
                <field name="supplier_category_name"/>
                <field name="public_category_id"/>
                <field name="confidence" widget="progressbar"/>
            </list>
        </field>
    </record>

    <record id="action_tec_category_mapping" model="ir.actions.act_window">
        <field name="name">Category AI Mappings</field>
        <field name="res_model">tec.catalog.category.mapping</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="action_server_generate_ai_mappings" model="ir.actions.server">
        <field name="name">Generar Mapeos con AI (Gemini)</field>
        <field name="model_id" ref="model_tec_catalog_category_mapping"/>
        <field name="binding_model_id" ref="model_tec_catalog_category_mapping"/>
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="code">
            action = model.action_generate_ai_mappings()
        </field>
    </record>

    <menuitem id="menu_tec_category_mapping"
              name="AI Category Mappings"
              parent="website_sale.menu_catalog"
              action="action_tec_category_mapping"
              sequence="90"/>
</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_template_form_view_enricher" model="ir.ui.view">
        <field name="name">product.template.form.inherit.enricher</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="before">
                <header>
                    <button name="action_fetch_technical_data" string="üì• Obtener Ficha T√©cnica" type="object" class="btn-primary" 
                        invisible="enrichment_state in ['full_enriched', 'tech_done'] and not force_enrichment"/>
                    <button name="action_generate_marketing_content" string="‚ú® Generar Marketing AI" type="object" class="btn-secondary"
                         invisible="enrichment_state == 'draft'"/>
                </header>
            </xpath>
            <xpath expr="//div[@name='button_box']" position="inside">
                 <button class="oe_stat_button" type="object" name="action_open_website" icon="fa-magic" invisible="enrichment_state == 'draft'">
                    <field string="Enriquecido" name="enrichment_source" widget="statinfo"/>
                </button>
            </xpath>
            <xpath expr="//page[@name='sales']" position="after">
                <page string="Inteligencia de Cat√°logo" name="catalog_intelligence">
                    <group>
                        <group string="Estado de Enriquecimiento">
                            <field name="enrichment_state" widget="statusbar" options="{'clickable': '1'}"/>
                            <field name="enrichment_source" string="Fuente de Datos"/>
                            <field name="force_enrichment" string="Forzar Re-enriquecimiento"/>
                        </group>
                        <group string="Identificadores Externos">
                            <field name="original_part_number" string="N√∫mero de Parte Origen" readonly="1"/>
                            <field name="external_product_url" string="P√°gina Lenovo (PSREF)" widget="url"/>
                            <field name="lenovo_datasheet_url" string="Datasheet PDF Lenovo" widget="url"/>
                            <field name="icecat_product_url" string="URL Icecat" widget="url"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    <!-- Mass Enrichment Server Action -->
    <record id="action_mass_fetch_technical_data" model="ir.actions.server">
        <field name="name">üîç Enriquecer Masivamente (T√©cnico)</field>
        <field name="model_id" ref="product.model_product_template"/>
        <field name="binding_model_id" ref="product.model_product_template"/>
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="code">
            action = records.action_fetch_technical_data()
        </field>
    </record>

    <record id="action_mass_fetch_marketing_data" model="ir.actions.server">
        <field name="name">‚ú® Enriquecer Masivamente (Marketing)</field>
        <field name="model_id" ref="product.model_product_template"/>
        <field name="binding_model_id" ref="product.model_product_template"/>
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="code">
            action = records.action_generate_marketing_content()
        </field>
    </record>
</odoo>
